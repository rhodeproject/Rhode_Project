
<div class="row">
    <% if signed_in? %>
      <aside class="span3">
        <section>
          <%= render 'shared/user_info' %>
        </section>
        <section>
          <h4><%= current_user.club.name %> Upcoming Events</h4><br>
          <%= render 'shared/events' %>
        </section>
          <%= render 'shared/sponsors' %>
      </aside>
      <div class="span9">
        <img src="/assets/rp_Banner_triNE_blur.png"/>
        <%= render 'shared/message' %>
      </div>

    <% else %>
      <div class="span10 offset1">
        <img src="/assets/rp_Banner_triNE_blur.png"/>
      </div>
      <div class="span12">
        <%= render 'shared/default_message' %>
      </div>
    <% end %>
    <div id="frmLogin" title="Login">
      <%= render 'shared/login' %>
    </div>
    <div id="frmNewUser" title="<%= club_url(request.subdomain).name %> -- New User">
      <%= render 'shared/new_user' %>
    </div>
</div>