<% provide(:title, @forum.name) %>


      <div class="page-header">
        <h1>
          <%= @forum.name %> Forum
        </h1>
        <h2><%= @forum.description %></h2>

      </div>
        <table class="table table-condensed table-bordered table-striped">
          <thead>
            <th width="60%">Topic Title</th>
            <th width="10%">Replies</th>
            <th width="30%">Last Post</th>
          </thead>
          <% for topic in @forum.topics %>
              <tr>
                <td><%= link_to h(topic.name), topic_path(topic.id) %>
                <td><%= topic.posts.count - 1 %></td>
                <td class="right">
                  <%= distance_of_time_in_words_to_now topic.last_post_at %> ago by <%= link_to topic.user.name, "/users/#{topic.last_poster_id}" %>
                </td>
                <td><%= link_to "Show", topic %></td>
                <td><%= link_to "Edit", edit_topic_path(topic) %></td>
                <td><%= link_to "Destroy", topic, :confirm => 'Are you sure?', :method => :delete %></td>
              </tr>
          <% end %>
        </table>

        <%= link_to "Create New Topic", "/topics/new?forum=#{@forum.id}", class: "btn btn-large btn-primary" %>
        <%= render 'follow' %>