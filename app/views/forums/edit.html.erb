<% provide(:title, "Edit Forum") %>

<h1>Edit <%= @forum.name %> Forum</h1>
<div class="row">
  <div class="span6 offset3">
    <%= form_for(@forum) do |f| %>
        <%= f.label :name %>
        <%= f.text_field :name %>

        <%= f.label :description %>
        <%= f.text_field :description %>

        <%= f.label :admin, "admin?" %><%= f.check_box :admin %><br><hr class="shadow">

        <%= f.submit "Update", :class => "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>