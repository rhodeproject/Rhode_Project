<% provide(:title, "Add Forum") %>
<% if signed_in? %>
    <h1>Admin - Create New Forum</h1>

    <div class="row">
      <div class="span6 offset3">
        <%= form_for(@forum) do |f| %>
            <%= f.label :name %>
            <%= f.text_field :name %>

            <%= f.label :description %>
            <%= f.text_field :description %>

            <%= f.label :admin, "admin?" %><%= f.check_box :admin%>

            <%= f.submit "Add Forum", :class => "btn btn-large btn-primary" %>
        <% end %>
      </div>
    </div>
<% else %>
    <p>Not signed in</p>
<% end %>

