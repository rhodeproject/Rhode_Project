<div class="row">
  <%= form_for @sponsor do |f|%>
      <%= render 'shared/error_messages', :object => f.object %>

      <%= f.label :name %>
      <%= f.text_field :name %>

      <%= f.label :image_name %>
      <%= f.text_field :image_name %>

      <%= f.label :url %>
      <%= f.text_field :url %>

      <%= f.label :description %>
      <%= f.text_area :description, :cols => '80', :rows => '10' %>
      <% if params[:action] == "index" %>
        <%= f.submit "Add Sponsor", :class => "btn btn-large btn-primary"  %>
      <% else %>
        <%= f.submit "Update!", :class => "btn btn-large btn-primary" %>
      <% end %>
  <% end %>
</div>
