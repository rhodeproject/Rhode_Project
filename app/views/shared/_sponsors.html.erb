<% if current_user.club.has_sponsors? %>

<div class="span2" id="sponsors">
  <% @sponsors.each do |s| %>
      <% if s.image_name? %>
          <!--if the image starts with http then -->
          <%= image_tag(s.image_path, :height => '90', :width => '120', :alt => s.url, :class =>"sponsorLink") %>
      <% else %>
        <%= link_to s.name, s.url %>
      <% end %>
  <% end %>
</div>
<% end %>