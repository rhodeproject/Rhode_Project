<div class="center hero-unit">
  <h1 class="text-shadow"><%= club_url(request.subdomain).name %></h1>
  <% unless signed_in? %>
      <%= link_to "Sign in!", '/signin', :id => "btnLogin",:class => "btn btn-large btn-primary" %> /
      <%= link_to "Sign up now!", '/signup', :id => "btnSignUp",:class=> "btn btn-large btn-primary" %>
          <% if request.subdomain == 'www' %>
              / <%= link_to "Add My Club!", '/addclub', :class => "btn btn-large btn-primary" %>
          <% end %>
   <% end %>
</div>
<div class="row-fluid">
  <div class="span12 label label-info"><%= current_club.name %> Upcoming Events</div>
  <div class="span6">
        <%= render 'shared/events' %>
    </div>
</div><!--/row-->
