  <div class="span4">
    <h2><%= club_url(request.subdomain).heading2 %></h2>
    <%= club_url(request.subdomain).message2 %>
  </div><!--/span-->
  <div class="span4">
    <h2><%= club_url(request.subdomain).heading3 %></h2>
    <%= club_url(request.subdomain).message3 %>
