<header class="navbar navbar-fixed-top" xmlns="http://www.w3.org/1999/html">
  <div class="navbar-inner">
    <div class="container">
      <%= link_to current_club.name, root_path, :id => "logo" %>
      <nav>
        <ul class="nav pull-right">
          <li><%= link_to raw('<i class="icon-home icon-white"></i> Home'), root_path %></li>
          <% if signed_in? %>
              <li><%= link_to raw('<i class="icon-comment icon-white"></i> Forums'), "/forums"%></li>
              <li><%= link_to raw('<i class="icon-calendar icon-white"></i> Calendar'), "/calendar"%>
              <li id="fat-menu" class="dropdown">
                <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                  <i class="icon-user icon-white"></i>
                  <%= current_user.name %> <b class="caret"></b>
                </a>
                <ul class="dropdown-menu">
                  <li><%= link_to "Club Members", users_path %></li>
                  <li><%= link_to "My Profile", current_user %></li>
                  <li><%= link_to "My Settings", edit_user_path(current_user) %></li>
                  <li class="divider"></li>
                  <li>
                    <%= link_to "Sign out #{current_user.name}", signout_path, :method => "delete" %>
                  </li>
                </ul>
              </li>
              <% if current_user.admin? %>
              <li id="fat-menu" class="dropdown">
                <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                  <i class="icon-cog icon-white"></i>
                  Admin <b class="caret"></b>
                </a>
                <ul class="dropdown-menu">
                  <li><%= link_to "Club Notices",notices_path%></li>
                  <li><%= link_to "Club Settings", current_user.club %></li>
                  <li><%= link_to "Edit Club", edit_club_path(current_user.club_id) %></li>
                  <li><%= link_to "Members", users_path %></li>
                </ul>
              </li>
              <% end %>
              <li>
                <%=form_tag posts_path, :class => "navbar-search pull-right", :method => :get do%>
               <!-- <input type="text" class="search-query" placeholder="Search"> -->
                <%= text_field_tag :query, params[:query], :class => "search-query", :placeholder =>"Search" %>
                <% end %>
               </li>
          <% else %>
              <li><%= link_to "Sign in", signin_path %></li>
              <li><%= link_to "About Us", '/about' %></li>
          <% end %>
        </ul>
      </nav>
    </div>
  </div>
</header>
