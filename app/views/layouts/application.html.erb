<!DOCTYPE html>
<html>
<head>
  <title><%= full_title(yield(:title)) %></title>
  <%= stylesheet_link_tag    "application","fullcalendar","https://ajax.googleapis.com/ajax/libs/jqueryui/1.7.2/themes/redmond/jquery-ui.css",
                             media: "all" %>
  <%= javascript_include_tag "application","https://ajax.googleapis.com/ajax/libs/jquery/1.4.2/jquery.min.js",
                             "https://ajax.googleapis.com/ajax/libs/jqueryui/1.8.1/jquery-ui.min.js",
                             "jquery-ui-1.8.17.custom.min",
                             "fullcalendar","jquery-ui-timepicker-addon" %>
  <%= csrf_meta_tags %>
  <%= render 'layouts/shim' %>

  <!-- Google Analytics -->

      <script type="text/javascript">

          var _gaq = _gaq || [];
          _gaq.push(['_setAccount', 'UA-31413530-1']);
          _gaq.push(['_trackPageview']);

          (function() {
              var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
              ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
              var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
          })();

      </script>

  <!--End Analytics-->
</head>
<body>
<%= render 'layouts/header' %>
<div class="container">
  <% flash.each do |key, value| %>

      <!--Alnernate way of displaying flash, this is less clean
      <div class="alert alert-<%= key %>"><%= value %></div>-->

      <%= content_tag(:div, value, class: "alert alert-#{key}") %>
  <% end %>
  <%= yield %>
  <%= render 'layouts/footer' %>
  <%= debug(params) if Rails.env.development? %>
</div>
</body>
</html>