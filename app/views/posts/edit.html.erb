<% provide(:title, "Edit Post") %>

<div class="row">
  <div class="span6 offset3">
    <%= form_for (@post) do |f| %>
        <%= render 'shared/error_messages', object: f.object %>
        <%= f.label :content %>
        <%= f.text_area :content %>
        <%= f.submit "Update Post", class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>