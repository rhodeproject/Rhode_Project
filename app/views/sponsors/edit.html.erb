<%= provide(:title, "#{current_user.club.name} Edit Sponsor") %>
<div class="row">
<div class="span5">

  <%= form_for @sponsor do |f|%>
      <%= render 'shared/error_messages', :object => f.object %>
      <%= image_tag(@sponsor.image_path, :class => "sponsor") %>
      <%= f.label :name %>
      <%= f.text_field :name %>

      <%= f.label :label %>
      <%= f.text_field :label %>

      <%= f.label :priority %>
      <%= f.text_field :priority %>

      <%= f.label :image_name %>
      <%= f.text_field :image_name %>

      <%= f.label :url %>
      <%= f.text_field :url%>

      <%= f.label :twitter_id %>
      <%= f.text_field :twitter_id %>

      <%= f.label :facebook_id %>
      <%= f.text_field :facebook_id %>

      <%= f.label :description %>
      <%= f.text_area :description, :cols => '80', :rows => '10' %><br>
      <% if params[:action] == "index" %>
          <%= f.submit "Add Sponsor", :class => "btn btn-large btn-primary"  %>
      <% else %>
          <%= f.submit "Update!", :class => "btn btn-large btn-primary" %>
      <% end %>
  <% end %>
  </div>
</div>