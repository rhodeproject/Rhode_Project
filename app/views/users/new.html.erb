<%= provide(:title, 'Sign up') %>
<%= render 'shared/show_banner' %>
<h1>new user registration</h1>

<div class="row">
  <div class="span4 offset4">
    <%= form_for(@user) do |f| %>
        <%= render 'shared/error_messages', object: f.object %>
        <%= render 'fields', f: f %>

        <%= f.submit "Create my account", class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>