
<div id='new_event' title='New Event'>
    <%= form_for (@event) do |f| %>
      <%= f.label :title %>
      <%= f.text_field :title %>

      <%= f.label :starts_at %>
      <%= f.text_field :starts_at %>

      <%= f.label :ends_at %>
      <%= f.text_field :ends_at %>

      <%= f.label :all_day %>
      <%= f.check_box :all_day %>

      <%= f.label :description %>
      <%= f.text_area :description, :size => '30x8' %>

      <%= f.submit "Add Event", class: "btn btn-large btn-primary" %>
    <% end %>
</div>